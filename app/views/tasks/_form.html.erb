<div class="form">
  <%= form_for(@task) do |t| %>
    <div class="form-group">
      <%= t.label :title %>
      <%= t.text_field(:title, class: "form-control") %>
    </div>
    <div class="form-group">
      <%= t.label(:details) %>
      <%= t.text_field(:details, class: "form-control") %>
    </div>
    <div class="form-check">
      <%= t.check_box(:completed, class: "form-check-input") %>
      <%= t.label(:completed) %>
    </div>
    <%= t.submit(class: "btn btn-primary") %>
  <% end %>
</div>